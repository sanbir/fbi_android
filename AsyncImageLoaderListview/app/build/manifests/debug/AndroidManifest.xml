<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.example.customizedlist">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.javatechig.customizedlist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.javatechig.customizedlist.UserActivity"/>

        <activity android:label="@string/app_name" android:name="com.javatechig.customizedlist.ImageGridActivity">
        </activity>

        <activity android:label="@string/app_name" android:name="com.javatechig.customizedlist.ImageDetailActivity" android:parentActivityName="com.javatechig.customizedlist.ImageGridActivity" android:theme="@style/AppThemeDark.FullScreen">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".ui.ImageGridActivity"/>
        </activity>
    </application>

</manifest>
